<li>
  <%= gravatar_for user, :size => 30 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && current_page?(:controller => 'users', :action => 'index') %>
  | <%= link_to "delete", user, :method => :delete, :confirm => "Are you sure?",
                                :title => "Delete #{user.name}" %>
  <% end %>
</li>