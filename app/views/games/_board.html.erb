
<table class="board round">
  <tr> <center>
	<% if !@game.is_current_player(current_user) || @game.game_over %> 
		<th> <center> 1 </th>
		<th> <center> 2 </th>
		<th> <center> 3 </th>
		<th> <center> 4 </th>
		<th> <center> 5 </th>
		<th> <center> 6 </th>
		<th> <center> 7 </th>
	<% else %>
		<% (0..6).each do |column| %>
		<% if !@game.position(6, column) %>
			<% @move_column = column %>
			<th> <center> <%= render 'games/move' %> </th>
		<% else %>
			<th> <center> <%= column + 1 %> </th>
		<% end %>
		<% end %>
	<% end %>
  </tr>
  <% (6.downto(0)).each do |row|%>
    <tr>
	  <% (0..6).each do |col| %>
      <td> <center> <% if @game.position(row,col)%>
				<% if @game.position(row,col) == @player1.id %>
					<%= image_tag("blue.png", :alt => "1", :class => "round") %>
				<% else %>
					<%= image_tag("red.png", :alt => "2", :class => "round") %>
				<% end %>
	  <% else %>
		<%= image_tag("empty.png",  :alt => "0", :class => "round") %>
	  <% end %>
	  </td>
	  <% end %>	
    </tr>
	
    </tr>
  <% end %>
</table>